<ul class="navbar-nav">
    @if (User.Identity is not null && User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            Hello

            @if (User.IsInRole("Manager"))
            {
                @:Manager
            }

            @User.Identity?.Name!
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="" asp-controller="Identity" asp-action="SignOut">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Identity" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Identity" asp-action="SignIn">Login</a>
        </li>
    }
</ul>